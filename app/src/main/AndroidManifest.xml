<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="bruno.com.br.rxexamples">

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.rx_activity.BackgroundWorkActivity"
                android:label="@string/title_activity_background_work"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.rx_activity.AccumulateCallsActivity">
        </activity>
        <activity android:name=".ui.rx_activity.AutoSearchingActivity">
        </activity>
        <activity android:name=".ui.rx_activity.NetworkingActivity">
        </activity>
        <activity android:name=".ui.rx_activity.DataBindingActivity">
        </activity>
        <activity android:name=".ui.rx_activity.PollingActivity">
        </activity>
        <activity
                android:name=".ui.rx_activity.InstantSearchingActivity"
                android:label="@string/title_activity_instant_searching"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ui.rx_activity.RetrofitActivity"
                android:label="@string/title_activity_retrofit"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>